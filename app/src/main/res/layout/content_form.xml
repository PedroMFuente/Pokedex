<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:backgroundTint="#9F9F9F"
                android:text="Cancelar"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/buttonSave"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:backgroundTint="#9F9F9F"
                android:text="Guardar"
                android:textColor="#FF1C1C"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/buttonCancel"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="28dp"
                android:background="@drawable/camara__"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textInputName"
                app:layout_constraintTop_toBottomOf="@+id/buttonSave" />

            <Button
                android:id="@+id/buttonClearimg"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="28dp"
                android:backgroundTint="#9F9F9F"
                android:text="Limpiar Imagen"
                android:textColor="#000000"
                android:textSize="9sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputName"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="36dp"
                android:hint="Nombre"
                android:textColor="#000000"
                android:textColorHint="#141414"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonCancel" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textname"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="36dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonCancel">

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textItem"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="108dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonCancel">

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputItem"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="32dp"
                android:hint="Objeto"
                android:textColorHint="#141414"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputName" />

            <Spinner
                android:id="@+id/tipe1"
                style="@android:style/Widget.DeviceDefault.Light.Spinner"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="60dp"
                android:background="#ACACAC"
                android:dropDownSelector="#1A1A1A"
                android:popupBackground="#ACACAC"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.241"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textItem" />

            <Spinner
                android:id="@+id/tipe2"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="44dp"
                android:background="#ACACAC"
                android:popupBackground="#ACACAC"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.241"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tipe1" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textdate"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="51dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tipe2">

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputDate"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginTop="51dp"
                android:hint="dd/mm/aaaa"
                android:inputType="date"
                android:textColor="#000000"
                android:textColorHint="#141414"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.203"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tipe2" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="128dp"
                android:layout_height="27dp"
                android:layout_marginTop="68dp"
                android:background="#000000"
                android:text="Variocolor"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHighlight="@color/red_pb"
                android:textColorLink="#FFFFFF"
                android:textCursorDrawable="@color/red_pb"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.938"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonClearimg" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textAtt"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.203"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textdate">

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputAtt"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:hint="Ataque"
                android:inputType="number"
                android:textColor="#000000"
                android:textColorHint="#141414"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.203"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textdate" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textHp"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginTop="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.206"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textAtt">

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputHp"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginTop="48dp"
                android:hint="Vida"
                android:inputType="number"
                android:textColor="#000000"
                android:textColorHint="#141414"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.202"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textAtt" />

            <ImageView
                android:id="@+id/imageattc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="64dp"
                app:layout_constraintEnd_toStartOf="@+id/textAtt"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView10"
                app:srcCompat="@drawable/physical" />

            <ImageView
                android:id="@+id/imagelife"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="72dp"
                app:layout_constraintEnd_toStartOf="@+id/textHp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageattc"
                app:srcCompat="@drawable/other" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="46dp"
                android:layout_height="21dp"
                android:layout_marginTop="60dp"
                app:layout_constraintEnd_toStartOf="@+id/tipe1"
                app:layout_constraintHorizontal_bias="0.764"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textItem"
                app:srcCompat="@drawable/_0px_tipo____" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="46dp"
                android:layout_height="21dp"
                android:layout_marginTop="56dp"
                app:layout_constraintEnd_toStartOf="@+id/tipe2"
                app:layout_constraintHorizontal_bias="0.761"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView6"
                app:srcCompat="@drawable/_0px_tipo____" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="19dp"
                android:layout_height="18dp"
                android:layout_marginTop="72dp"
                app:layout_constraintEnd_toStartOf="@+id/switch1"
                app:layout_constraintHorizontal_bias="0.987"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonClearimg"
                app:srcCompat="@drawable/estrella_pok_mon_variocolor" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                app:layout_constraintEnd_toStartOf="@+id/textItem"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView11"
                app:srcCompat="@drawable/aranja" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="68dp"
                app:layout_constraintEnd_toStartOf="@+id/textdate"
                app:layout_constraintHorizontal_bias="0.307"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView7"
                app:srcCompat="@drawable/pokemon_egg_png" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                app:layout_constraintEnd_toStartOf="@+id/textInputName"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonCancel"
                app:srcCompat="@drawable/ditto_ranger" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>