<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="206dp"
                android:layout_height="50dp"
                android:backgroundTint="#9F9F9F"
                android:text="Cancelar"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/buttonSave"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="206dp"
                android:layout_height="50dp"
                android:backgroundTint="#9F9F9F"
                android:text="Guardar"
                android:textColor="#FF1C1C"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/buttonCancel"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="28dp"
                android:background="@drawable/camara__"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textname"
                app:layout_constraintTop_toBottomOf="@+id/buttonSave" />

            <Button
                android:id="@+id/buttonClearimg"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="28dp"
                android:backgroundTint="#9F9F9F"
                android:text="Limpiar Imagen"
                android:textColor="#000000"
                android:textSize="9sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputName"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="44dp"
                android:hint="Nombre"
                android:textColor="#000000"
                android:textColorHint="#141414"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonCancel" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textname"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="44dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonCancel">

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textItem"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="108dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonCancel">

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputItem"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="24dp"
                android:hint="Objeto"
                android:textColorHint="#141414"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textname" />

            <Spinner
                android:id="@+id/tipe1"
                style="@android:style/Widget.DeviceDefault.Light.Spinner"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="60dp"
                android:background="#ACACAC"
                android:dropDownSelector="#1A1A1A"
                android:popupBackground="#ACACAC"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.241"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textItem" />

            <Spinner
                android:id="@+id/tipe2"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="44dp"
                android:background="#ACACAC"
                android:popupBackground="#ACACAC"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.241"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tipe1" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textdate"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="51dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tipe2">

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputDate"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginTop="51dp"
                android:hint="dd/mm/aaaa"
                android:inputType="date"
                android:textColor="#000000"
                android:textColorHint="#141414"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.203"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tipe2" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="146dp"
                android:layout_height="27dp"
                android:layout_marginTop="68dp"
                android:background="#000000"
                android:text="Variocolor"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHighlight="@color/red_pb"
                android:textColorLink="#FFFFFF"
                android:textCursorDrawable="@color/red_pb"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.938"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonClearimg" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textAtt"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.203"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textdate">

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputAtt"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:hint="Ataque"
                android:inputType="number"
                android:textColor="#000000"
                android:textColorHint="#141414"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.203"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textdate" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginTop="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.206"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textAtt">

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText2"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginTop="48dp"
                android:hint="Vida"
                android:inputType="number"
                android:textColor="#000000"
                android:textColorHint="#141414"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.202"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textAtt" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>