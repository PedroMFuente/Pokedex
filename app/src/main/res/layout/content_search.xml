<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/sameground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/searchbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="116dp"
                android:layout_marginBottom="50dp"
                android:text="@string/title_activity_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SearchtextView" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/SeachInputLayoutName"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginTop="92dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/SearchInputEditName"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginTop="76dp"
                android:hint="@string/hint_name"
                android:singleLine="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="39dp"
                android:layout_height="14dp"
                android:layout_marginTop="80dp"
                app:layout_constraintEnd_toStartOf="@+id/Searchspinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:srcCompat="@drawable/_0px_tipo____" />

            <TextView
                android:id="@+id/SearchtextView"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginTop="73dp"
                android:text="dd/mm/yyyy"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Searchspinner" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginTop="88dp"
                app:layout_constraintEnd_toStartOf="@+id/SearchtextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                app:srcCompat="@drawable/pokemon_egg_png" />

            <Spinner
                android:id="@+id/Searchspinner"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="64dp"
                android:background="#ACACAC"
                android:theme="@style/spinnercolor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SearchInputEditName" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="92dp"
                app:layout_constraintEnd_toStartOf="@+id/SearchInputEditName"
                app:layout_constraintHorizontal_bias="0.489"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ditto_ranger" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>